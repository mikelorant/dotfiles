<% name   = %x(id -F).chomp %>
<% user   = %x(id -un).chomp %>
<% domain = %x(hostname).partition('.').last.chomp %>
<% domain = 'fairfaxmedia.com.au' %>
[user]
	name = <%= name %>
	email = <%= user %>@<%= domain %>
[push]
	default = current
[pull]
	ff = only
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  syntax-theme = Dracula
  features = diff-so-fancy line-numbers
