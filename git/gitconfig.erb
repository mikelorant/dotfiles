<% name   = %x(id -F).chomp %>
<% user   = %x(id -un).chomp %>
<% domain = %x(hostname).partition('.').last.chomp %>
<% domain = 'fairfaxmedia.com.au' %>
[user]
    name = <%= name %>
    email = <%= user %>@<%= domain %>
[push]
    default = current
    autoSetupRemote = true
[pull]
    ff = only
[diff]
    colormoved = default
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[advice]
    ignoredHook = false
[delta]
    syntax-theme = Dracula
    features = diff-so-fancy line-numbers
[alias]
	# https://www.xspdf.com/help/50940888.html
    parent = ! git show-branch -a | grep '\\*' | grep -v `git rev-parse --abbrev-ref HEAD` | head -n1 | sed 's/.*\\[\\(.*\\)\\].*/\\1/' | sed 's/[\\^~].*//'
    untag = ! git tag -l | xargs git tag -d
    basename = ! basename `git config --get remote.origin.url` .git
[remote "origin"]
    tagopt = --no-tags
